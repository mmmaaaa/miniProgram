.comment .scroll{
    width: 200rpx;
    margin-right: 20rpx;
}
.comment .scroll image{
    height: 200rpx;
    width: 200rpx;
    border-radius: 10rpx;
}
.comment .scrollview{
  height: 300rpx;
  display: flex;
  margin-top: 20rpx;
}
.scroll text{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.topList{
  padding:20rpx;
  margin-top: -20rpx;
}
.topListSwiper .swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}
.topListSwiper .swiperItem .musicItem{
  display: flex;
  margin-bottom: 20rpx;
}
.topListSwiper{
  height: 400rpx;
}
.topListSwiper .swiperItem .title{
    font-size: 30rpx;
    line-height: 80rpx;
}
.topListSwiper .swiperItem .musicItem image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 5rpx;
}
.topListSwiper .swiperItem .musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.topListSwiper .swiperItem .musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
}